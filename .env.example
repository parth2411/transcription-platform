# ==============================================
# TRANSCRIPTION PLATFORM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ==============================================
# SECURITY (REQUIRED)
# ==============================================
# Generate a strong secret key (at least 32 characters)
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-characters-long

# ==============================================
# DATABASE (REQUIRED)
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/transcription_db

# ==============================================
# GROQ API (REQUIRED)
# ==============================================
# Get your API key from: https://console.groq.com/keys
# FREE TIER LIMITS: Be mindful of rate limits
GROQ_API_KEY=your_groq_api_key_here

# ==============================================
# QDRANT VECTOR DATABASE (REQUIRED)
# ==============================================
# Sign up at: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ==============================================
# REDIS (OPTIONAL)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# AWS S3 STORAGE (OPTIONAL)
# ==============================================
# Leave empty to use local file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Frontend URL for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File upload limits
MAX_FILE_SIZE=104857600
MAX_VIDEO_DURATION_MINUTES=120

# ==============================================
# RATE LIMITING (GROQ FREE TIER)
# ==============================================
# Groq Free Tier Limits:
# - 30 requests per minute
# - 14,400 requests per day
GROQ_RATE_LIMIT_RPM=25
GROQ_RATE_LIMIT_RPD=10000
GROQ_RATE_LIMIT_ENABLED=true

# ==============================================
# SPEAKER DIARIZATION (OPTIONAL)
# ==============================================
# Get HuggingFace token from: https://huggingface.co/settings/tokens
# Required for speaker diarization feature
HUGGINGFACE_TOKEN=your_huggingface_token_here
DIARIZATION_ENABLED=false
