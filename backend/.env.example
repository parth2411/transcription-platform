# backend/.env.example
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/transcription_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
GROQ_API_KEY=gsk_your_groq_api_key_here
QDRANT_URL=https://your-qdrant-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# File Storage (optional - leave empty for local storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://your-frontend-domain.com"]

# App Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=["audio/wav","audio/mp3","audio/m4a","audio/mpeg","video/mp4","video/mov","video/avi","video/mkv"]

# Subscription Limits
FREE_TIER_LIMIT=5
PRO_TIER_LIMIT=100
BUSINESS_TIER_LIMIT=-1
