# backend/.env.example
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/transcription_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
GROQ_API_KEY=gsk_your_groq_api_key_here
QDRANT_URL=https://your-qdrant-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# File Storage (optional - leave empty for local storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://your-frontend-domain.com"]

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# App Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=["audio/wav","audio/mp3","audio/m4a","audio/mpeg","video/mp4","video/mov","video/avi","video/mkv"]

# Subscription Limits
FREE_TIER_LIMIT=5
PRO_TIER_LIMIT=100
BUSINESS_TIER_LIMIT=-1

# ========================================
# NEW: Granola AI Features - Calendar Integration
# ========================================

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/calendar/google/callback

# Microsoft Calendar OAuth (for future use)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Apple Calendar OAuth (for future use)
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Calendar Sync Settings
CALENDAR_SYNC_INTERVAL_MINUTES=15
MEETING_PREP_MINUTES_BEFORE=15

# WebSocket Settings (for real-time transcription)
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=100
